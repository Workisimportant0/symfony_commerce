{% extends 'base.html.twig' %}

{% block title %}Plus Infos
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/form-validation.css">
{% endblock %}

{% block body %}
	<h1>fiche + info</h1>
	<div class="album py-5 bg-light">
		<div class="container">
			<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
				{% for produit in plusInfoProduit %}

					<div class="col">
						<div class="card shadow-sm">
							<div class="divLibelle">
								<div
									class="divLibelleUn">{# {% for libelle in produit.libelles %}
										<span class="badge" style="background-color:#{{libelle.couleur}}">{{libelle.nom}}</span>
									{% endfor %} #}
								</div>
								<img style="height:225px;width:100%" src="/uploads/{{ plusInfoProduit.nomImage }}"/>
							</div>
							<div class="card-body">
								<h4></h4>
								<p class="card-text"></p>
								<div class="d-flex justify-content-between align-items-center">
									<div class="btn-group"></div>
									<small class="text-muted">€</small>
								</div>
							</div>
						</div>
					</div>
					<div class="grix xs2 sm3 gutter-0 card">
						<div class="col-xs2 col-sm3">
							<h2>Liste des commentaires</h2>
							{# {% for comment in produit.comments %}
														<p>Publié par {{comment.nickname}} le {{comment.createAt | date("d/m/Y H:i")}}</p>
														<div>{{comment.content}}</div>
													{% endfor %}
												</div>
												<div class="col-xs2 col-sm3"> #}
							<h2>Ajouter des commentaires</h2>
							{# {{ form(commentForm) }} #}
						</div>

					</div>
				{% endfor %}
			</div>
		</div>
	</div>

{% endblock %}
